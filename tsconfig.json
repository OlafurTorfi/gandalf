{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "ES6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "types": ["mocha", "node", "pg", "electron"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"],
    "compileOnSave": true
}
