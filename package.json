{
    "name": "gandalf",
    "version": "0.0.1",
    "description": "sql client",
    "main": "app.js",
    "dependencies": {
        "JSONStream": "^1.3.1",
        "classnames": "^2.2.5",
        "codemirror": "^5.25.2",
        "electron": "^1.6.2",
        "faker": "^2.1.1",
        "fuzzy": "^0.1.0",
        "mithril": "^0.1.25",
        "moment": "^2.19.2",
        "node-jt400": "1.5.6",
        "q": "~1.0.0",
        "sql-parser": "git+https://github.com/jakobrun/sql-parser"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.41",
        "@types/node": "^8.5.1",
        "chai": "^1.10.0",
        "electron-connect": "^0.6.1",
        "electron-css-reload": "^1.0.8",
        "electron-installer-debian": "^0.7.1",
        "electron-mocha": "^3.4.0",
        "electron-packager": "^8.6.0",
        "electron-rebuild": "^1.5.7",
        "gulp": "^3.8.10",
        "gulp-less": "^1.3.6",
        "husky": "^0.13.3",
        "mocha": "^2.0.1",
        "prettier": "^1.8.2",
        "rimraf": "^2.2.8",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.6.0",
        "typescript": "^2.3.1"
    },
    "repository": {
        "type": "git",
        "url": "gh:jakobrun/gandalf.git"
    },
    "scripts": {
        "precommit":
            "npm run lint && npm run check-format && npm run build && npm t && npm run ui-test",
        "build-deps":
            "electron-rebuild && node node_modules/java/postInstall.js",
        "postinstall": "npm run build-deps",
        "build": "tsc && gulp less",
        "package-mac":
            "electron-packager . Gandalf --platform=darwin --arch=x64",
        "package-linux":
            "electron-packager . Gandalf --platform=linux --arch=x64",
        "deb64":
            "electron-installer-debian --src Gandalf-linux-x64/ --dest builds/ --arch amd64",
        "dev": "tsc -w",
        "serve": "gulp serve",
        "test": "mocha dist/modules/tests",
        "ui-test": "electron-mocha --renderer ./dist/views/tests/",
        "start": "electron .",
        "lint": "tslint --project .",
        "format": "prettier --write \"src/**/*.ts*\"",
        "check-format": "prettier -l \"src/**/*.ts\""
    },
    "author": "Jakob Már Rúnarsson",
    "license": "MIT",
    "readmeFilename": "README.md"
}
